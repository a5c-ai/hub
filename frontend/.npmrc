# NPM configuration to reduce warnings and improve performance

# Reduce dependency resolution warnings
legacy-peer-deps=false
auto-install-peers=true

# Performance optimizations
prefer-offline=true
cache-max=86400000

# Security settings
audit-level=moderate

# Reduce noise in logs
loglevel=warn

# Engine strict mode
engine-strict=true

# Save exact versions for better reproducibility
save-exact=false
save-prefix=^